package com.lewtsu.webbrowser;

import java.awt.BorderLayout;
import java.awt.Dimension;
import java.awt.Rectangle;
import java.io.IOException;
import java.net.MalformedURLException;
import java.net.URL;

import javax.swing.JEditorPane;
import javax.swing.JFrame;
import javax.swing.JScrollPane;
import javax.swing.SwingUtilities;

public class Gui {

	private JFrame jf;
	private JEditorPane jEdit;
	private JScrollPane jScroll;

	public Gui() {
		jf = new JFrame("Title");
		jf.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		//jf.setExtendedState(JFrame.MAXIMIZED_BOTH);
		jf.setSize(800, 800);

		jEdit = new JEditorPane();
		jEdit.setEditable(false);
		jEdit.setPreferredSize(new Dimension(250, 145));
		jEdit.setMinimumSize(new Dimension(10, 10));
		try {
			URL url = new URL("http://www.google.com/");
			jEdit.setPage(url);
		} catch (MalformedURLException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}

		jScroll = new JScrollPane(jEdit);

		SwingUtilities.invokeLater(new Runnable() {
			public void run() {
				jEdit.scrollRectToVisible(new Rectangle(1,1,1,1));
			}
		});

		jScroll.setVerticalScrollBarPolicy(JScrollPane.VERTICAL_SCROLLBAR_ALWAYS);
		jScroll.setPreferredSize(new Dimension(250, 145));
		jScroll.setMinimumSize(new Dimension(10, 10));

		jf.add(jEdit, BorderLayout.CENTER);
		jf.add(jScroll, BorderLayout.EAST);

		jf.setLocationRelativeTo(null);
		jf.setVisible(true);
	}

}
